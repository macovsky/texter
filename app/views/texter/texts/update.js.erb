$("#texter-popup").remove();

<% presenter = Texter::TextPresenter.new(@text, self) %>

$(".<%= presenter.path_for_class %>").each(function(){
  var text = $(this);
  $.get("<%= texter.text_path(@text.path) %>", {formatter: text.data("formatter"), tag_type: text.data('tag-type'), locale: text.data('locale')}, function(data) {
    text.replaceWith(data);
  });
});
